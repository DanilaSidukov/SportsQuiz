        <item name="android:textColor">?attr/whiteColor</item>
    </style>
    
    <style name="totalScoreText">
        <item name="fontFamily">@font/rubik_semibold</item>
        <item name="android:textColor">?pointScoreColor</item>
    </style>

    <style name="totalPointScore">
        <item name="fontFamily">@font/rubik_semibold</item>
